          <div style="width: 120px; height: 80px; border: 1px solid lightgray; display: flex; justify-content: center; align-items: center; border-radius: 5px;">
            <p style="text-align: center; margin-bottom: 0;"><%=  liqueur.name  %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <h2>Syrups</h2>
  <div class="syrups" style="width: 80%; margin-bottom: 3rem;">
    <ul class="list-unstyled" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem;">
      <% @syrups.each do |syrup| %>
        <li>
          <div style="width: 120px; height: 80px; border: 1px solid lightgray; display: flex; justify-content: center; align-items: center; border-radius: 5px;">
            <p style="text-align: center; margin-bottom: 0;"><%=  syrup.name  %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <h2>Juices</h2>
  <div class="juices" style="width: 80%; margin-bottom: 3rem;">
    <ul class="list-unstyled" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem;">
      <% @juices.each do |juice| %>
