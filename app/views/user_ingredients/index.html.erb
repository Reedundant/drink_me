
<div class="container" style="justify-content: flex-start;">
  <h1>Select all the ingredients you have!</h1>

  <h2>Liquors</h2>
  <div class="liquors" style="width: 80%; margin-bottom: 3rem;">
    <ul class="list-unstyled" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem;">
      <% @liquors.each do |liquor| %>
        <li>
          <div style="width: 120px; height: 80px; border: 1px solid lightgray; display: flex; justify-content: center; align-items: center; border-radius: 5px;">
            <p style="text-align: center; margin-bottom: 0;"><%=  liquor.name  %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <h2>Liqueurs</h2>
  <div class="liqueurs" style="width: 80%; margin-bottom: 3rem;">
